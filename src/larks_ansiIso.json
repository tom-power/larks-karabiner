{
  "title": "larks command control",
  "rules": [
    {
      "description": "@ (left_shift + ')",
      "manipulators": [{
        "from": {
          "key_code": "quote",
          "modifiers": {
            "mandatory": [
              "left_shift"
            ]
          }
        },
        "to": [{
          "key_code": "2",
          "modifiers": [
            "left_shift"
          ]
        }],
        "type": "basic"
      }]
    },
    {
      "description": "\" (left_shift + 2)",
      "manipulators": [{
        "from": {
          "key_code": "2",
          "modifiers": {
            "mandatory": [
              "left_shift"
            ]
          }
        },
        "to": [{
          "key_code": "quote",
          "modifiers": [
            "left_shift"
          ]
        }],
        "type": "basic"
      }]
    },
    {
      "description": "\" (right_shift + 2)",
      "manipulators": [{
        "from": {
          "key_code": "2",
          "modifiers": {
            "mandatory": [
              "right_shift"
            ]
          }
        },
        "to": [{
          "key_code": "quote",
          "modifiers": [
            "left_shift"
          ]
        }],
        "type": "basic"
      }]
    },
    {
      "description": "\" wrapped (left_shift+right_shift+2 to wrapped double quote)",
      "manipulators": [
        {
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_shift"
              ]
            }
          },
          "to": [
            {
               "key_code": "x",
               "modifiers": ["left_command"]
           },
           {
               "shell_command": "pbpaste | pbcopy -pboard ruler"
           },
           {
             "key_code": "quote",
             "modifiers": [
               "left_shift"
             ]
           },
           {
               "shell_command": "pbpaste -pboard ruler"
           },
           {
               "key_code": "v",
               "modifiers": ["left_command"]
           },
           {
             "key_code": "quote",
             "modifiers": [
               "left_shift"
             ]
           }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
